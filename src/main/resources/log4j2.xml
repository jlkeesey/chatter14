<Configuration status="info" name="logparser" packages="pub.carkeys.logparse.log4j">
    <Appenders>
        <Event name="JPanel">
            <PatternLayout>
                <Pattern>EVENT: %d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </Event>
        <RollingFile name="RollingFile" fileName="${sys:java.io.tmpdir}/logs/logparser.log"
                     filePattern="${sys:java.io.tmpdir}/logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <Console name="STDERR" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="pub.carkeys.logparse" level="trace" additivity="false">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="JPanel"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="STDERR"/>
        </Root>
    </Loggers>
</Configuration>